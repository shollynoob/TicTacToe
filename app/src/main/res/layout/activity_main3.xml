<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgback"
    tools:context=".Main3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/player1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/player_1"
                android:textColor="@color/textColor"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/player2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/player_2"
                android:textColor="@color/textColor"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/p1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/player1_label"
                android:paddingLeft="30dp"
                android:paddingStart="30dp"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/p2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/player2_label"
                android:paddingEnd="50dp"
                android:paddingRight="50dp"
                android:text="0"
                android:textColor="@color/textColor"
                android:textSize="40sp" />
        </RelativeLayout>

        <TableLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            tools:context=".Main3Activity">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center">

                <Button
                    android:id="@+id/b7"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/b8"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />

                <Button
                    android:id="@+id/b9"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_margin="2dp"
                    android:background="@drawable/button_radius"
                    android:onClick="getID"
                    android:textColor="@color/textColor"
                    android:textSize="50sp" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/reset_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_action_back"
                android:onClick="resetGame"
                android:text="@string/reset_game"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/reset_board"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_action_back"
                android:onClick="resetBoard"
                android:text="@string/reset_board"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>