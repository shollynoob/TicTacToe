<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/boardColor"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/player1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/player_1"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/player2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/player_2"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/p1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player1_label"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:text="A"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/p2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/player2_label"
            android:paddingEnd="50dp"
            android:paddingRight="50dp"
            android:text="B"
            android:textSize="40sp" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        tools:context=".Main3Activity">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center">

            <Button
                android:id="@+id/b1"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center">

            <Button
                android:id="@+id/b4"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

            <Button
                android:id="@+id/b6"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center">

            <Button
                android:id="@+id/b7"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

            <Button
                android:id="@+id/b8"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />

            <Button
                android:id="@+id/b9"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_margin="2dp"
                android:background="@drawable/button_radius"
                android:onClick="getID"
                android:textColor="@color/textColor"
                android:textSize="60sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>